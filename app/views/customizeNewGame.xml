<Alloy>
	<Window class="container">
		<RightNavButton>
			<Button id="doneBtn" title="Start" bottom="50" onClick="startGame"/>
		</RightNavButton>
		<Label text="Players" color="black" left="20" top="0"/>
		<TableView id="table" top="20" bottom="200" borderWidth="1" allowsSelection="false">
			<TableViewRow>
				<View height="50" onSingletap="addPlayer"> 
					<Label text="Add Player" right="60"/>
					<Button id="add" title="+" right="20"/>
				</View>
			</TableViewRow>
		</TableView>
		<!--Button id="doneBtn" title="Start" bottom="50" onClick="startGame"/-->
	</Window>
</Alloy>